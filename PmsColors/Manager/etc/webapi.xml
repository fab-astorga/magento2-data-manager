<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="POST" url="/V1/pms_colors/import">
        <service class="PmsColors\Manager\Api\PmsColorsImportInterface" method="importPmsColorsFromCsv"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/pms_colors/get/:pmsColorId">
        <service class="PmsColors\Manager\Api\PantoneListRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/pms_colors">
        <service class="PmsColors\Manager\Api\PmsColorsImportInterface" method="getPmsColors"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>