<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="infinitescroll"/>
    <body>
        <referenceBlock name="category.products.list">
            <action method='setTemplate'>
                <argument name="template" xsi:type="string">Product_Module::product/list.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="category.products.list.image">
            <action method='setTemplate'>
                <argument name="template" xsi:type="string">Product_Module::product/image_with_borders.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
