<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="POST" url="/V1/customers/create/:email/:firstname/:lastname/:password">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="createCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/customers/get/:email">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="getCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/customers/delete/:email">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="deleteCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/customers/update/:email/:firstname/:lastname">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="updateCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/customers/login/:email/:password">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="loginCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/customers/logout">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="logoutCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/customers/change_password/:email/:actualPassword/:newPassword">
        <service class="Customers\Manager\Api\CustomersManagementInterface" method="changePasswordCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>